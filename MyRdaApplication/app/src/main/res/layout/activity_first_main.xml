<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_misbahati"
    android:background="@color/black"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/dhikrId"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/todo"
        android:scaleType="centerCrop"
        android:src="@drawable/image_mosq"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textVImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="92dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/location_icon"
        app:layout_constraintBottom_toBottomOf="@+id/dhikrId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.407"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textVImage"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/label_date"
        style="@style/TitleFontFirst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#222121"
        android:padding="3dp"
        android:text=""
        android:textColor="@color/white"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dhikrId" />

    <TextView
        android:id="@+id/label_title_prayOf"
        style="@style/TitleFontFirst"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="0.05"
        android:background="@drawable/corner_ronder_up"
        android:padding="3dp"
        android:shadowRadius="50"
        android:text="@string/prayOf"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_date" />

    <TextView
        android:id="@+id/prayOfBody"
        style="@style/TitleFontFirst"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/corner_ronded"
        android:onClick="onShowDoua"
        android:ellipsize="end"
        android:maxLines="3"
        android:shadowRadius="50"
        android:text="..."
        android:padding="15dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_title_prayOf" />


    <!--        android:id="@+id/menu_first"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:orientation="horizontal"-->
<!--        android:theme="@style/Theme.AppCompat.DayNight">-->

<!--        ]]>-->

    <TextView
        android:id="@+id/label_title"
        style="@style/TitleFontFirst"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/corner_ronder_up"
        android:padding="3dp"
        android:shadowRadius="50"
        android:text="@string/dhikr"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prayOfBody" />

    <TextView
        android:id="@+id/dhikrBody"
        style="@style/TitleFontFirst"
        android:layout_width="330dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/corner_ronded"
        android:onClick="goNextPage"
        android:shadowRadius="50"
        android:text=""
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_title"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btn_today"
        android:layout_width="131dp"
        android:layout_height="70dp"
        android:layout_above="@+id/menu_first"
        android:text="@string/today"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_qibla"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dhikrBody"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="NotSibling,UnknownId" />
    <!--        <DatePicker-->
        <!--            android:id="@+id/dateOfBirthInput"-->
        <!--            android:inputType="text|date"-->
        <!--            android:layout_width="130dp"-->
        <!--            android:layout_height="20dp"-->
        <!--            android:datePickerMode="spinner"-->
        <!--            android:calendarViewShown="false"-->
        <!--            android:layout_gravity="center_horizontal"-->
        <!--            />-->


    <ImageView
        android:id="@+id/icon_today"
        android:layout_width="24dp"
        android:layout_height="16dp"
        android:layout_above="@+id/btn_today"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:src="@mipmap/calendar_icon"
        app:layout_constraintBottom_toBottomOf="@+id/btn_today"
        app:layout_constraintEnd_toEndOf="@+id/btn_today"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_today"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_qibla"
        android:layout_width="131dp"
        android:layout_height="70dp"
        android:text="@string/qibla"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_points"
        app:layout_constraintStart_toEndOf="@+id/btn_today"
        app:layout_constraintTop_toBottomOf="@+id/dhikrBody"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/icon_qibla"
        android:layout_width="24dp"
        android:layout_height="16dp"
        android:layout_above="@+id/btn_qibla"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:src="@mipmap/mosque_icon"
        app:layout_constraintBottom_toBottomOf="@+id/btn_qibla"
        app:layout_constraintEnd_toEndOf="@+id/btn_qibla"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toEndOf="@+id/btn_today"
        app:layout_constraintTop_toTopOf="@+id/btn_qibla"
        app:layout_constraintVertical_bias="0.363" />

    <Button
        android:id="@+id/btn_points"
        android:layout_width="131dp"
        android:layout_height="90dp"
        android:text="@string/points"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toEndOf="@+id/btn_qibla"
        app:layout_constraintTop_toBottomOf="@+id/dhikrBody"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/icon_points"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_above="@+id/btn_points"

        android:layout_marginEnd="56dp"
        android:src="@mipmap/mosque_icon"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/btn_points"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.927"
        app:layout_constraintStart_toStartOf="@+id/btn_points"
        app:layout_constraintTop_toBottomOf="@+id/dhikrBody"
        app:layout_constraintVertical_bias="0.304" />


</androidx.constraintlayout.widget.ConstraintLayout>