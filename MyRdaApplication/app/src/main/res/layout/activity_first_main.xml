<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_misbahati"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/dhikrId"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/todo"
        android:scaleType="centerCrop"
        android:src="@drawable/image_mosq"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textVImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="92dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageLocalisation"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/location_icon"
        app:layout_constraintBottom_toBottomOf="@+id/dhikrId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.407"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textVImage"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/localisationText"
        style="@style/TitleFontFirst"
        android:layout_width="177dp"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="164dp"
        android:layout_marginEnd="70dp"
        android:padding="3dp"
        android:text=""
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/dhikrId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.714"
        app:layout_constraintStart_toEndOf="@+id/imageLocalisation"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/label_date"
        style="@style/TitleFontFirst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#222121"
        android:padding="3dp"
        android:text=""
        android:textColor="@color/white"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dhikrId" />


    <TextView
        android:id="@+id/label_title_prayOf"
        style="@style/TitleFontFirst"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="196dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="0.05"
        android:background="@drawable/corner_ronder_up"
        android:padding="3dp"
        android:shadowRadius="50"
        android:text="@string/prayOf"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.387"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_date" />

    <TextView
        android:id="@+id/prayOfBody"
        style="@style/TitleFontFirst"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/corner_ronded"
        android:ellipsize="end"
        android:maxLines="2"
        android:onClick="onShowDoua"
        android:padding="15dp"
        android:shadowRadius="50"
        android:text="..."
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.387"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_title_prayOf" />

    <TextView
        android:id="@+id/label_title"
        style="@style/TitleFontFirst"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/corner_ronder_up"
        android:padding="3dp"
        android:shadowRadius="50"
        android:text="@string/dhikr"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.387"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prayOfBody" />

    <TextView
        android:id="@+id/dhikrBody"
        style="@style/TitleFontFirst"
        android:layout_width="330dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/corner_ronded"
        android:ellipsize="end"
        android:maxLines="2"
        android:onClick="goNextPage"
        android:shadowRadius="50"
        android:text=""
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.387"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_title"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/btn_today"
        style="@style/TitleFontFirst"
        android:layout_width="94dp"
        android:layout_height="58dp"
        android:paddingTop="28dp"
        android:text="@string/today"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dhikrBody"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/btn_qibla"
        style="@style/TitleFontFirst"
        android:layout_width="94dp"
        android:layout_height="58dp"
        android:paddingTop="28dp"
        android:text="@string/qibla"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_mosque"
        app:layout_constraintStart_toEndOf="@+id/btn_today"
        app:layout_constraintTop_toBottomOf="@+id/dhikrBody"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/btn_mosque"
        style="@style/TitleFontFirst"
        android:layout_width="94dp"
        android:layout_height="58dp"
        android:onClick="showMap"
        android:paddingTop="28dp"
        android:text="@string/mosque"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_points"
        app:layout_constraintTop_toBottomOf="@+id/dhikrBody"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/btn_points"
        style="@style/TitleFontFirst"
        android:layout_width="94dp"
        android:layout_height="58dp"
        android:paddingTop="28dp"
        android:text="@string/points"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dhikrBody"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageCalendar"
        android:layout_width="25dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_today"
        app:layout_constraintEnd_toEndOf="@+id/btn_today"

        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/btn_today"
        app:layout_constraintTop_toTopOf="@+id/btn_today"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@mipmap/cal" />

    <ImageView
        android:id="@+id/imageQibla"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_qibla"
        app:layout_constraintEnd_toEndOf="@+id/btn_qibla"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintStart_toEndOf="@+id/btn_today"
        app:layout_constraintTop_toTopOf="@+id/btn_qibla"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@mipmap/qib" />

    <ImageView
        android:id="@+id/imageMosque"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_mosque"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="@+id/btn_mosque"
        app:layout_constraintTop_toTopOf="@+id/btn_mosque"

        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@mipmap/mos" />

    <ImageView
        android:id="@+id/imageMore"
        android:layout_width="25dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_points"
        app:layout_constraintEnd_toEndOf="@+id/btn_points"
        app:layout_constraintStart_toStartOf="@+id/btn_points"
        app:layout_constraintTop_toTopOf="@+id/btn_points"
        app:layout_constraintVertical_bias="0.0"

        app:srcCompat="@mipmap/bar" />


